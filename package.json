{
  "name": "@nextcss/core",
  "version": "0.4.3-beta",
  "description": "Core module for Next.css.",
  "license": "MIT",
  "main": "dist/core.css",
  "files": [
    "dist/*"
  ],
  "keywords": [
    "nextcss"
  ],
  "publishConfig": {
    "access": "public"
  },
  "author": {
    "name": "Zsolt Tovis",
    "email": "tovis.zsolt@gmail.com",
    "url": "https://toviszsolt.github.io/"
  },
  "funding": "https://paypal.me/toviszsolt",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nextcss/core.git"
  },
  "bugs": {
    "url": "https://github.com/nextcss/core/issues"
  },
  "homepage": "https://next-css.com",
  "scripts": {
    "build": "npm run build:dist && npm run build:test",
    "watch": "node-sass --watch --output-style compact src/core.scss dist/core.css",
    "build:dist": "node-sass --output-style compressed src/core.scss dist/core.css",
    "build:test": "node-sass --output-style compact src/core.scss test/core.css"
  },
  "devDependencies": {
    "node-sass": "^5.0.0"
  }
}
